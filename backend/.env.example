# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@your-neon-host/dbname

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=3000

# CORS Settings
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=["http://localhost:3001", "http://127.0.0.1:3001"]

# HyperLiquid API Configuration
HYPERLIQUID_WALLET_KEY=your_HYPERLIQUID_WALLET_KEY_here
HYPERLIQUID_PRIVATE_KEY=your_HYPERLIQUID_PRIVATE_KEY_here
HYPERLIQUID_TESTNET=true
HYPERLIQUID_BASE_URL=https://api.hyperliquid.xyz

# WebSocket Configuration
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_ATTEMPTS=5

# Trading Configuration
SYMBOL=LINK
DEFAULT_LEVERAGE=10
MAX_POSITIONS=20
PORTFOLIO_CASH_RESERVE_PERCENT=0
SPOT_SAVINGS_PERCENT=0

# Risk Management
MAX_DRAWDOWN_PERCENT=23
FIBONACCI_LEVELS=[0.23, 0.38, 0.50, 0.618]
STOP_LOSS_TRAILING_PERCENT=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/hypertrader.log

# Security (for future production use)
SECRET_KEY=your-secret-key-for-jwt-tokens
ACCESS_TOKEN_EXPIRE_MINUTES=30
